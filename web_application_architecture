// Full Web Application Architecture
digraph {
	U [label=User]
	R [label="Recursive DNS Resolver (ISP/Public)"]
	G [label="GeoDNS (Authoritative DNS)"]
	C [label="CDN (e.g., Cloudflare)"]
	L [label="Load Balancer"]
	A1 [label="Application Server 1"]
	A2 [label="Application Server 2"]
	DB [label=Database]
	U -> R [label="DNS Request"]
	R -> G [label="Query Authoritative DNS"]
	G -> R [label="Return Geo-based IP"]
	R -> U [label="Return IP to User"]
	U -> C [label="Request to CDN"]
	C -> L [label="Forward to Load Balancer"]
	L -> A1 [label="Route to App Server 1"]
	L -> A2 [label="Route to App Server 2"]
	A1 -> DB [label="Query Database"]
	A2 -> DB [label="Query Database"]
	DB -> A1 [label="Return Data"]
	DB -> A2 [label="Return Data"]
	A1 -> L [label="Return to Load Balancer"]
	A2 -> L [label="Return to Load Balancer"]
	L -> C [label="Return to CDN"]
	C -> U [label="Return to User"]
}
